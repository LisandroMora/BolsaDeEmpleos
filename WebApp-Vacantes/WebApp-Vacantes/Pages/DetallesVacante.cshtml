@page "/detalles/id={IdVacante:int}"
@inject HttpClient Http
@using System.IO;
@using System.Net.Http;
@using System.Net.Http.Json;
@using apiVacantes.Models;
@using Microsoft.AspNetCore.Http.Extensions;
@using Microsoft.AspNetCore.Authorization;
@using Microsoft.AspNetCore.Hosting
@inject IWebHostEnvironment env
@attribute [AllowAnonymous]


@{
    string url = Request.GetDisplayUrl();
    int BeforeID = url.IndexOf("=");

    int id = Convert.ToInt32(url.Substring(BeforeID + 1, (url.Length - BeforeID) - 1));
    Trabajos trabajo = await Http.GetFromJsonAsync<Trabajos>($"api/Vacantes/{id}");
    Categoria categoria = await Http.GetFromJsonAsync<Categoria>($"/api/Categoria/{trabajo.IdCategoria}");
    var path = $"{env.WebRootPath}\\logos\\{trabajo.UrlString}";


    if (System.IO.File.Exists(path) == false)
    {
        trabajo.UrlString = "logoVRD.jpg";
    };

    string tipo = "";
    if (trabajo.IdTipo == 1) tipo = "Full-Time";
    else if (trabajo.IdTipo == 2) tipo = "Part-Time";
    else if (trabajo.IdTipo == 3) tipo = "Freelance";
}


<div class="card my-3 mx-auto d-flex mt-5" style="max-width: 1300px;">
    <div class="row g-0">
        <div class="col-md-4 d-flex justify-content-center">
            <img src="~/logos/@trabajo.UrlString" alt="Logo" class="img-fluid p-4  rounded" style="border-radius:300px">
        </div>
        <div class="col-md-8">
            <div class="card-body">
                <h5 class="card-title">@trabajo.Posicion</h5>
                <p class="card-text">Ubicacion: @trabajo.Ubicacion</p>
                <p class="card-text">Categoria: @categoria.Nombre</p>
                <p class="card-text">Empresa: @trabajo.Empresa</p>
                <p class="card-text">Descripcion: @trabajo.Descripcion</p>
                <p class="card-text">Tipo: @tipo</p>
                <p class="card-text">Email: @trabajo.Email</p>
                <p class="card-text">Como Aplicar: @trabajo.ComoAplicar</p>
                <p class="card-text"><small class="text-muted">Publicado en: @trabajo.Fecha</small></p>
            </div>
        </div>
    </div>
</div>

